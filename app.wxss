/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.main {
  padding: 48rpx;
}

.h2 {
  font-size: 32rpx;
  font-weight: bold;
  margin: 0;
}

.p {
  font-size: 24rpx;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 16rpx;
}

.btn-purple {
  color: white;
  /* padding: 8px 24px; */
  border-radius: 10px;
  background: #670BFF;
  transition: background 0.3s ease;
}

.btn-purple:hover {
  background: #4D04C4;
  color: white;
}