<!--pages/stories/new.wxml-->
<view class="main">
  <view class="h2" style="text-align: center;">Add a New Story</view>

  <form bindsubmit="submit">
    <view class="label">Title:</view>
    <input type="text" name="title" value="{{formTitle}}"/>

    <view class="label">Description:</view>
    <input type="text" name="description" value="{{formDescription}}"/>

    <button form-type="submit" class="btn-purple" style="margin-top: 100rpx;">Save</button>
  </form>
</view>
